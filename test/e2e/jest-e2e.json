{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./../../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/e2e/setupTests.ts"],
  "verbose": true,
  "coverageDirectory": "./coverage-e2e"
}
